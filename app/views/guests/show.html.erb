<h1> Guest Show Page </h1>
<p>Guest Name: <%= @guest.name %></p>


<h5> Episodes This Guest Has Appeared On</h5>
<ul>
<% @guest.episodes.each do |episode| %>
    <li><%= episode.date %></li>
    <li><%= episode.appearances %></li> 
    <li><%= link_to episode.number, episode_path(episode) %></li>
    <% end %>
</ul>

