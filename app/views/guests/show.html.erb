<h1><%= @guest.name %></h1>

<h3>Occupation: <%= @guest.occupation.capitalize %></h3>

<h4>Appearances:</h4>
<ul>
    <% @guest.appearances.order(rating: :desc).each do |appearance| %>
        <li>Date: <%= link_to appearance.episode.date, episode_path(appearance.episode) %> - Rating: <%= appearance.rating %> </li>
    <% end %>
</ul>

<%= button_to "Add an Appearance", new_appearance_path, method: "get" %>