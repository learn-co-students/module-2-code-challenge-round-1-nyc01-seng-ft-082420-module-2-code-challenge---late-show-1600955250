<% if flash[:success] %>
  <%= flash[:success] %>
<% end %>

<h3><%="Episode #{@episode.number} - #{@episode.date.strftime("%B %d, %Y")}" %></h3>
Average score: <%= @episode.average_score %><br/><br/>
<% @episode.guests.uniq.each do |guest| %>
  <%= link_to guest.name, guest_path(guest)%><br/>
<% end %>
