<h1>New Appearance Form</h1>

<%= form_for @appearance do |f| %>
    <%= f.label :guest_id %>
    <%= f.collection_select :guest_id, @guest, :id, :name %>
    <%= f.label :episode_id %>
    <%= f.collection_select :episode_id, @episode, :id, :date %>
    <%= f.label :rating %>
    <%= f.number_field :rating %>
    <%= f.submit "Create Appearance" %>
<% end %>
