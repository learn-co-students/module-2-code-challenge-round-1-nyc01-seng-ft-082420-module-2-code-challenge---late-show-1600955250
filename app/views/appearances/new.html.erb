<h3> Appearance Form </h3>

<% if @appearance.errors.any? %>
  There were <%= @appearance.errors.count %> error(s)<br><br>
    <%@appearance.errors.full_messages.each do |msg| %>
      <%= msg %>
      <% end %>
<% end %>



<%= form_for @appearance do |f| %>
  <%= f.label :guest_id %>
  <%= f.collection_select(:guest_id, Guest.all, :id, :name) %>
  <br>
  <br>
  <%= f.label :episode_id %>
  <%= f.collection_select(:episode_id, Episode.all, :id, :number) %>
  <br>
  <br>
  <%= f.label :rating %>
  <%= f.number_field :rating, {within: 1..10}%>
  <br>
  <br>
  <%= f.submit %>
<% end %>
