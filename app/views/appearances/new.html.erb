<h1>New Appearance</h1>

<% if flash[:errors] %>
    <% flash[:errors].each do |message| %>
        <ul>
            <li style="color:red"><%= message %></li>
        </ul>
    <% end %>
<% end %>

<%= form_for @appearance do |f| %>
    <%= f.collection_select :guest_id, Guest.all, :id, :name, {prompt: "Select Guest"} %>
    <br>
    <%= f.collection_select :episode_id, Episode.all, :id, :episode_number_with_date, {prompt: "Select Episode"} %>
    <br>
    <%= f.label :rating %>
    <%= f.number_field :rating %>
    <br>
 <%= f.submit %>
<%end%>

