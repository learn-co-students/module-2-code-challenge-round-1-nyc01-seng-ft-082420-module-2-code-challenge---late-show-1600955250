<h1>Appearances New</h1>

<% if flash[:my_errors] %>
<%flash[:my_errors].each do |error| %>
    <p><%= error %></p>
    <% end %>
    <% end %>

<%= form_for @appearance do |f| %>
    <%= f.label :guest_id %>
    <%= f.collection_select :guest_id, Guest.all, :id, :name %>
    <br>
    <%= f.label :episode_id %>
    <%= f.collection_select :episode_id, Episode.all, :id, :date %>
    <br>
    <%= f.label :rating %>
    <%= f.number_field :rating %>

    <%= f.submit %>

    <% end %>

