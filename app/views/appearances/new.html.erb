<h1>New Appearance</h1>

<% if flash[:new_errors] %>
  <% flash[:new_errors].each do |e| %>
  <h4> <%= e %> </h4>
  <% end %>
<% end %>
<ul>
  <%= form_for @appearance do |f| %>
    <li> <%= f.label :guest_id %> 
    <%= f.collection_select :guest_id, Guest.all, :id, :name %> </li>
    <br>
    <li> <%= f.label :episode_id %> 
    <%= f.collection_select :episode_id, Episode.all, :id, :date %> </li>
    <br>
    <li> <%= f.label :rating %> 
    <%= f.number_field :rating %> </li>
    <br>
    <li> <%= f.submit %> </li>
  <% end %>
</ul>