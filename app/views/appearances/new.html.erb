<h1> Create an Appearance </h1>

<% if flash[:my_errors] %>
    <% flash[:my_errors].each do |error| %>
        <p style ="color:red;"><%= error %></p>
    <% end %>
<% end %>


<%= form_for @appearance do |f| %>
<%= f.label "Guest" %>
<%= f.collection_select :guest_id, Guest.all, :id, :name %>
<br>
<%= f.label "Episode" %>
<%= f.collection_select :episode_id, Episode.all, :id, :number %>
<br>
<%= f.label :rating %>
<%= f.number_field :rating %>
<br>
<br>
<%= f.submit %>
<% end %>