<h1>New Appearance </h1>

<%= form_for @appearance  do |f| %>
<%= f.label :name %>
<%= f.collection_select(:guest_id, Guest.all, :id, :name)%>
<%= f.label :episode %>
<%= f.collection_select(:episode_id, Episode.all, :date, :number)%>
<%= f.label :rating %>
<%= f.number_field :rating %>
<%= f.submit %>




<%end %>


